      "url": "/chat",
      "icons": [
        {
          "src": "/icons/chat-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Simulador ENEM",
      "short_name": "ENEM",
      "description": "Faça simulados do ENEM",
      "url": "/enem",
      "icons": [
        {
          "src": "/icons/enem-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Aulas Interativas",
      "short_name": "Aulas",
