# Environment variables for Production deployment (hubedu.ia.br)
# Copy this file to .env.local for production configuration

# Database (Neon)
DATABASE_URL="postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"
DIRECT_URL="postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"

# NextAuth.js - CRITICAL: Use hubedu.ia.br domain
NEXTAUTH_SECRET="your-production-secret-key-here"
NEXTAUTH_URL="https://hubedu.ia.br"

# Google OAuth - REQUIRED for Google login
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_ALLOWED_DOMAIN="colegioose.com.br"
GOOGLE_SUPERADMIN_EMAIL="fonseca@colegioose.com.br"

# Embed Configuration (Módulos para incorporação em sites externos)
EMBED_ALLOWED_DOMAINS="colegioose.com.br,www.colegioose.com.br"
EMBED_ACCESS_TOKEN="your-secure-embed-token-here"
EMBED_ALLOW_ALL_DEV="false"

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Perplexity AI
PERPLEXITY_API_KEY="your-perplexity-api-key-here"

# GitHub OAuth (optional)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# External APIs
NEXT_PUBLIC_API_URL="https://hubedu.ia.br/api"

# Unsplash API
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"
UNSPLASH_SECRET_KEY="your-unsplash-secret-key"

# Pixabay API
PIXABAY_API_KEY="your-pixabay-api-key-here"

# Google Gemini API
GOOGLE_GEMINI_API_KEY="your-gemini-api-key-here"

# xAI Grok Configuration
XAI_API_KEY="your-xai-api-key-here"

# Feature flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=false

# API Priority Configuration
API_PRIORITY_MODE=api-first

# ENEM API Configuration
ENEM_FALLBACK_MODEL=gpt-4o-mini
ENEM_ENABLE_REAL_QUESTIONS=true
ENEM_ENABLE_AI_FALLBACK=true

# OpenAI API Configuration
OPENAI_API_PRIORITY=api
OPENAI_MODEL_SELECTION=auto

# Perplexity API Configuration
PERPLEXITY_API_PRIORITY=api
PERPLEXITY_MODEL_SELECTION=sonar-pro
PERPLEXITY_ENABLE_SEARCH=true

# Unsplash API Configuration
UNSPLASH_API_PRIORITY=api
UNSPLASH_ENABLE_IMAGE_SEARCH=true
UNSPLASH_ENABLE_AUTO_IMAGES=true

# Pixabay API Configuration
PIXABAY_API_PRIORITY=api
PIXABAY_ENABLE_IMAGE_SEARCH=true
PIXABAY_ENABLE_AUTO_IMAGES=true
PIXABAY_EDUCATIONAL_FOCUS=true

# General API Settings
API_CACHE_TIMEOUT=300000
API_ENABLE_RETRIES=true
API_MAX_RETRIES=3
API_ENABLE_LOGGING=true

# Admin Panel Configuration
ADMIN_TOKEN="your-secure-admin-token-here"
NEXT_PUBLIC_ADMIN_TOKEN="your-secure-admin-token-here"

# ===== OPENTELEMETRY CONFIGURATION =====

# OTel Collector Configuration (Private Service)
OTEL_COLLECTOR_URL="http://your-collector-service:4318"
NEXT_PUBLIC_OTEL_EXPORTER_OTLP_TRACES_ENDPOINT="/api/otel/v1/traces"
NEXT_PUBLIC_OTEL_EXPORTER_OTLP_METRICS_ENDPOINT="/api/otel/v1/metrics"

# Server-side OTel Configuration
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT="http://your-collector-service:4318/v1/traces"
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT="http://your-collector-service:4318/v1/metrics"
OTEL_EXPORTER_OTLP_LOGS_ENDPOINT="http://your-collector-service:4318/v1/logs"

# Service Configuration
OTEL_SERVICE_NAME="he-next"
OTEL_SERVICE_VERSION="1.0.0"
OTEL_DEPLOYMENT_ENVIRONMENT="production"

# Telemetry Intake Security
INTAKE_SECRET="your-secure-intake-secret-here"

# OTel Sampling Configuration (reduced for production)
OTEL_TRACES_SAMPLER="traceidratio"
OTEL_TRACES_SAMPLER_ARG="0.1"

# OTel Resource Attributes
OTEL_RESOURCE_ATTRIBUTES="service.name=he-next,service.version=1.0.0,deployment.environment=production"
