# Configuração de Ambiente para Sistema de Aulas Aprimorado
# Adicione estas variáveis ao seu arquivo .env.local

# API do Unsplash (obtenha em https://unsplash.com/developers)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here

# OpenAI (já configurado)
OPENAI_API_KEY=your-openai-api-key-here

# Neo4j (para integração futura)
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your-password

# Configurações de Qualidade
MIN_TOKENS_PER_SLIDE=500
TARGET_LESSON_DURATION_MIN=45
TARGET_LESSON_DURATION_MAX=60

# Configurações de Imagens
UNSPLASH_IMAGE_SIZE=regular
UNSPLASH_ORIENTATION=landscape
MAX_IMAGES_PER_LESSON=9

# Configurações de Custos
OPENAI_COST_PER_TOKEN=0.00003
MAX_TOKENS_PER_REQUEST=10000
