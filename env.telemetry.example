# OpenTelemetry Configuration
# Copy this to .env.local and configure your OpenTelemetry collector

# OTLP Exporter Endpoints
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics

# Service Configuration
OTEL_SERVICE_NAME=hubedu-admin
OTEL_SERVICE_VERSION=1.0.0
OTEL_RESOURCE_ATTRIBUTES=service.name=hubedu-admin,service.version=1.0.0

# Sampling Configuration
OTEL_TRACES_SAMPLER=traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0

# Logging
OTEL_LOG_LEVEL=info

# For production, use your observability platform endpoints:
# OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=https://your-otel-collector.com/v1/traces
# OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=https://your-otel-collector.com/v1/metrics
