# ============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# Copy this content to your .env.local file
# ============================================

# Database Configuration
DATABASE_URL="postgresql://localhost:5432/hubedu_dev"
DIRECT_URL="postgresql://localhost:5432/hubedu_dev"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"

# Google Gemini Configuration (any of the options below)
GOOGLE_GEMINI_API_KEY="your-gemini-api-key-here"
# OR
GEMINI_API_KEY="your-gemini-api-key-here"
# OR
GOOGLE_GENERATIVE_AI_API_KEY="your-gemini-api-key-here"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (optional)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# External APIs
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# ============================================
# IMAGE SEARCH APIs - CRITICAL FOR FIXING LOG ISSUES
# ============================================

# Unsplash API (working in logs)
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"
UNSPLASH_SECRET_KEY="your-unsplash-secret-key"

# Pixabay API (failing - API key not configured)
PIXABAY_API_KEY="your-pixabay-api-key-here"

# Bing Image Search API (failing in logs)
BING_SEARCH_API_KEY="your-bing-search-api-key-here"

# Pexels API (failing in logs)
PEXELS_API_KEY="your-pexels-api-key-here"

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=true

# ============================================
# API PRIORITY CONFIGURATION
# ============================================
API_PRIORITY_MODE="api-first"

# ENEM API Configuration
ENEM_FALLBACK_MODEL="gpt-4o-mini"
ENEM_ENABLE_REAL_QUESTIONS=true
ENEM_ENABLE_AI_FALLBACK=true

# OpenAI API Configuration
OPENAI_API_PRIORITY="api"
OPENAI_MODEL_SELECTION="auto"

# Unsplash API Configuration
UNSPLASH_API_PRIORITY="api"
UNSPLASH_ENABLE_IMAGE_SEARCH=true
UNSPLASH_ENABLE_AUTO_IMAGES=true

# Pixabay API Configuration
PIXABAY_API_PRIORITY="api"
PIXABAY_ENABLE_IMAGE_SEARCH=true
PIXABAY_ENABLE_AUTO_IMAGES=true
PIXABAY_EDUCATIONAL_FOCUS=true

# Bing Image Search API Configuration
BING_API_PRIORITY="api"
BING_ENABLE_IMAGE_SEARCH=true
BING_ENABLE_AUTO_IMAGES=true

# Pexels API Configuration
PEXELS_API_PRIORITY="api"
PEXELS_ENABLE_IMAGE_SEARCH=true
PEXELS_ENABLE_AUTO_IMAGES=true

# ============================================
# GENERAL API SETTINGS
# ============================================
API_CACHE_TIMEOUT=300000
API_ENABLE_RETRIES=true
API_MAX_RETRIES=3
API_ENABLE_LOGGING=true

# ============================================
# ADMIN PANEL CONFIGURATION
# ============================================
ADMIN_TOKEN="your-secure-admin-token-here"
NEXT_PUBLIC_ADMIN_TOKEN="your-secure-admin-token-here"

# ============================================
# IMAGE SELECTION CONFIGURATION
# Fixes timeout issues from logs
# ============================================
IMAGE_SELECTION_TIMEOUT=30000
IMAGE_SELECTION_MAX_RETRIES=3
IMAGE_SELECTION_FALLBACK_ENABLED=true

# ============================================
# SCHOOL PROFILE CONFIGURATION
# Fixes empty schoolId warning from logs
# ============================================
DEFAULT_SCHOOL_ID="default-school-profile"
SYNC_MODE_SCHOOL_ID_REQUIRED=false

# ============================================
# PERFORMANCE OPTIMIZATION
# Addresses slow Gemini generation (44s in logs)
# ============================================
GEMINI_GENERATION_TIMEOUT=60000
GEMINI_MAX_RETRIES=3
GEMINI_ENABLE_CACHING=true
GEMINI_CACHE_TTL=3600000

# ============================================
# NEXT AUTH JWT CONFIGURATION
# Fixes JWT_SESSION_ERROR from logs
# ============================================
NEXTAUTH_JWT_SECRET="your-jwt-secret-here"
NEXTAUTH_JWT_SIGNING_KEY="your-jwt-signing-key-here"
